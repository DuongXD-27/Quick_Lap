<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- Header -->
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: #2c3e50; -fx-padding: 10;" VBox.vgrow="NEVER">
            <children>
                <Label text="Chatbot Response" textFill="WHITE">
                    <font>
                        <Font name="Arial Bold" size="16.0" />
                    </font>
                </Label>
            </children>
        </HBox>

        <!-- Response Display Area -->
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" VBox.vgrow="NEVER">
            <content>
                <TextArea fx:id="responseArea" editable="false" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-font-family: 'Segoe UI', Arial, sans-serif; -fx-font-size: 14px; -fx-text-fill: #2c3e50;" text="Ná»™i dung chatbot response" wrapText="true" />
            </content>
        </ScrollPane>
    </children>
</VBox>
