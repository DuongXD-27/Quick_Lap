<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="group7.ui.controllers.ChatController">
    <children>
        <!-- Header -->
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" style="-fx-background-color: #2c3e50; -fx-padding: 10;" VBox.vgrow="NEVER">
            <children>
                <Label text="Chatbot Response" textFill="WHITE">
                    <font>
                        <Font name="Arial Bold" size="16.0" />
                    </font>
                </Label>
            </children>
        </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0" VBox.vgrow="NEVER">
         <children>
            <TextField fx:id="txtQuestion" prefHeight="50.0" prefWidth="500.0" style="-fx-border-radius: 10px;" />
            <Button fx:id="btnSearch" mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0" style="-fx-background-color: white;" text="Search" />
         </children>
      </HBox>
      <ScrollPane hbarPolicy="NEVER" prefHeight="400.0" prefWidth="800.0">
         <content>
            <TextArea fx:id="txtResponse" prefHeight="400.0" prefWidth="800.0" />
         </content>
      </ScrollPane>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="20.0" VBox.vgrow="NEVER">
         <children>
            <Button fx:id="btnBackToHome" mnemonicParsing="false" prefHeight="35.0" prefWidth="90.0" text="Back Home" />
         </children>
      </HBox>
    </children>
</VBox>
